<MudCard Style="max-width: 500px; margin: auto;">
    <MudForm Model="@accountProfileParameter" @ref="@form">
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="accountProfileParameter.FirstName"
                                  For="@(() => accountProfileParameter.FirstName)"
                                  Immediate="true"
                                  Label="First Name"
                                  FullWidth="true" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="accountProfileParameter.LastName"
                                  For="@(() => accountProfileParameter.LastName)"
                                  Label="Last Name"
                                  FullWidth="true" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="accountProfileParameter.EmailAddress"
                                  For="@(() => accountProfileParameter.EmailAddress)"
                                  Label="Email Address"
                                  ReadOnly="true"
                                  FullWidth="true" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField @bind-Value="accountProfileParameter.Role"
                                  For="@(() => accountProfileParameter.Role)"
                                  Label="Role"
                                  ReadOnly="true"
                                  FullWidth="true" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions Class="d-flex justify-content-between">
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Dark" OnClick="@(async () => await Confirm(false))">Cancel</MudButton>
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary" OnClick="@(async () => await Confirm(true))">OK</MudButton>
        </MudCardActions>
    </MudForm>
</MudCard>
