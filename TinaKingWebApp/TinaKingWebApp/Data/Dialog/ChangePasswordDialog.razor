<MudCard>
    <MudForm @ref="@form" Style="width:600px">
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" sm="4" >
                    <MudText>UserName</MudText>
                </MudItem>
                <MudItem xs="12" sm="8">
                    <MudTextField @bind-Value="UserName"
                                  For="@(() => UserName)"
                                  InputType="@MudBlazor.InputType.Text"
                                  ReadOnly="true"
                                  Label="Username"
                                  FullWidth="true" />
                </MudItem>
                
                <MudItem xs="12" sm="4">
                    <MudText>Current Password</MudText>
                </MudItem>
                <MudItem xs="12" sm="8">
                    <MudTextField @bind-Value="CurrentPassword"
                                  For="@(() => CurrentPassword)"
                                  InputType="@MudBlazor.InputType.Password"
                                  Label="Current Password"
                                  FullWidth="true"/>
                </MudItem>
                
                <MudItem xs="12" sm="4">
                    <MudText>New Password</MudText>
                </MudItem>
                <MudItem xs="12" sm="8">
                    <MudTextField @bind-Value="NewPassword"
                                  For="@(() => NewPassword)"
                                  InputType="@MudBlazor.InputType.Password"
                                  Label="New Password"
                                  FullWidth="true" />
                </MudItem>
                
                <MudItem xs="12" sm="4">
                    <MudText>Confirm Password</MudText>
                </MudItem>
                <MudItem xs="12" sm="8">
                    <MudTextField @bind-Value="ConfirmPassword"
                                  For="@(() => ConfirmPassword)"
                                  InputType="@MudBlazor.InputType.Password"
                                  Label="Confirm Password"
                                  FullWidth="true" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
        <MudCardActions>
           
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary" OnClick="@(async () => await Confirm(true))" Class="ml-auto">Save</MudButton>
        </MudCardActions>
    </MudForm>
</MudCard>
