<MudDrawer Open="@_drawerOpen" Variant="DrawerVariant.Mini" ClipMode="DrawerClipMode.Never" Anchor="Anchor.Left" Style="background-color: #0a253b;">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="ToggleDrawer" Edge="Edge.End" Style="color: white; margin-bottom: 10px; margin-inline:auto;">Main Menu</MudIconButton>
    <MudNavMenu>
        <MudNavLink Href="/Master" Icon="@Icons.Material.Filled.Home" IconColor="Color.Warning" Style="color:white;">Home</MudNavLink>
        <MudNavLink Href="/FinishedPackages" Icon="@Icons.Material.Outlined.CheckCircle" IconColor="Color.Warning" Style="color:white;">Finished Packages</MudNavLink>
        <AuthorizeView Roles="Admin">
            <Authorized>
                <MudNavGroup Title="Clients" Icon="@Icons.Material.Outlined.AssignmentInd" IconColor="Color.Warning" Style="color:white;" HideExpandIcon="true" Expanded="true">
                    <MudNavLink Href="/ClientList" Icon="@Icons.Material.Outlined.PersonSearch" IconColor="Color.Warning" Style="color:white;">Client List</MudNavLink>
                    <MudNavLink Href="/RegisterClient" Icon="@Icons.Material.Outlined.PersonAdd" IconColor="Color.Warning" Style="color:white;">Client Register</MudNavLink>
                </MudNavGroup>
                <MudNavGroup Title="Employees" Icon="@Icons.Material.Outlined.AssignmentInd" IconColor="Color.Warning" Style="color:white; " HideExpandIcon="true" Expanded="true">
                    <MudNavLink Href="/EmployeeList" Icon="@Icons.Material.Outlined.PersonSearch" IconColor="Color.Warning" Style="color:white;">Employee List</MudNavLink>
                    <MudNavLink Href="/EmployeeRegistration" Icon="@Icons.Material.Outlined.PersonAdd" IconColor="Color.Warning" Style="color:white;">Employee Register</MudNavLink>
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Admin, Manager">
            <Authorized>
                <MudNavGroup Title="Invoice" Icon="@Icons.Material.Filled.Money" IconColor="Color.Warning" Style="color:white; " HideExpandIcon="true" Expanded="true">
                    <MudNavLink Href="/Invoice/Draft" Icon="@Icons.Material.Filled.Drafts" IconColor="Color.Warning"  Style="color:white;">Draft</MudNavLink>
                    <MudNavLink Href="/Invoice/Schedule" Icon="@Icons.Material.Filled.Schedule" IconColor="Color.Warning" Style="color:white;">Schedule</MudNavLink>
                    <MudNavLink Href="/Invoice/History" Icon="@Icons.Material.Filled.History" IconColor="Color.Warning" Style="color:white;">History</MudNavLink>
                </MudNavGroup>
            </Authorized>
        </AuthorizeView>
    </MudNavMenu>
</MudDrawer>
